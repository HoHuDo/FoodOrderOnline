@model FoodOrderOnline.Models.DonHang
@{
    ViewData["Title"] = "Chi tiết Đơn hàng";
    Layout = "_LayoutNhanVien";
}

<h1>Chi tiết Đơn hàng: #@Model.MaDh</h1>

<div>
    <h4>Thông tin chung</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Khách Hàng</dt>
        <dd class="col-sm-9">@Model.MaKhNavigation?.HoTen</dd>

        <dt class="col-sm-3">Địa Chỉ Giao</dt>
        <dd class="col-sm-9">@Model.DiaChiGiao</dd>

        <dt class="col-sm-3">Ngày Đặt</dt>
        <dd class="col-sm-9">@Model.NgayDat</dd>

        <dt class="col-sm-3">Trạng Thái</dt>
        <dd class="col-sm-9">@Model.TrangThai</dd>
    </dl>

    <h4 class="mt-4">Chi tiết Món ăn</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Tên Món</th>
                <th>Số Lượng</th>
                <th>Đơn Giá</th>
                <th>Thành Tiền</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ChiTietDonHangs)
            {
                <tr>
                    <td>@item.MaMonNavigation.TenMon</td>
                    <td>@item.SoLuong</td>
                    <td>@item.DonGia?.ToString("N0")đ</td>
                    <td>@item.ThanhTien?.ToString("N0")đ</td>
                </tr>
            }
        </tbody>
    </table>

    <h4 class="mt-4">Thanh toán</h4>
    <dl class="row">
        <dt class="col-sm-3">Tạm tính</dt>
        <dd class="col-sm-9">@Model.TongTien?.ToString("N0")đ</dd>

        <dt class="col-sm-3">Voucher</dt>
        <dd class="col-sm-9">@(Model.MaVoucherNavigation?.MaCode ?? "Không áp dụng")</dd>

        <dt class="col-sm-3">Số Tiền Giảm</dt>
        <dd class="col-sm-9 text-danger">-@Model.SoTienGiam?.ToString("N0")đ</dd>

        <dt class="col-sm-3">Tổng Thanh Toán</dt>
        <dd class="col-sm-9 h5">@Model.TongThanhToan?.ToString("N0")đ</dd>
    </dl>
</div>
<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.MaDh" class="btn btn-primary">Sửa Đơn hàng</a> |
    <a asp-action="Index">Quay lại Danh sách</a>
</div>