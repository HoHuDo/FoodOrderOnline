@model FoodOrderOnline.ViewModels.ChiTietMonVM

@{
    ViewData["Title"] = Model.MonAn.TenMon;
}

<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" asp-controller="TrangChu" asp-action="Index">Trang chủ</a>
                <a class="breadcrumb-item text-dark" asp-controller="MonAn" asp-action="Index">Món ăn</a>
                <span class="breadcrumb-item active">@Model.MonAn.TenMon</span>
            </nav>
        </div>
    </div>
</div>
<div class="container-fluid pb-5">
    <div class="row px-xl-5">
        <div class="col-lg-5 mb-30">
         
            <img class="w-100 h-100" src="~/@Model.MonAn.HinhAnh" alt="@Model.MonAn.TenMon">
        </div>

        <div class="col-lg-7 h-auto mb-30">
            <div class="h-100 bg-light p-30">

                <h3>@Model.MonAn.TenMon</h3>
                <div class="d-flex mb-3">
                    <div class="text-primary mr-2">
                        <small class="fas fa-star"></small>
                        <small class="fas fa-star"></small>
                        <small class="fas fa-star"></small>
                        <small class="fas fa-star-half-alt"></small>
                        <small class="far fa-star"></small>
                    </div>
                    <small class="pt-1">(@Model.SoLuongDanhGia Đánh giá)</small>
                </div>
                <h3 class="font-weight-semi-bold mb-4">@Model.MonAn.Gia.ToString("N0")đ</h3>
                <p class="mb-4">@Model.MonAn.MoTa</p>

          
                <div class="d-flex mb-3">
                    <strong class="text-dark mr-3">Lựa chọn:</strong>
                    <form>
                        <div class="custom-control custom-radio custom-control-inline">
                            <input type="radio" class="custom-control-input" id="size-1" name="size" checked>
                            <label class="custom-control-label" for="size-1">Phần Vừa</label>
                        </div>
                        <div class="custom-control custom-radio custom-control-inline">
                            <input type="radio" class="custom-control-input" id="size-2" name="size">
                            <label class="custom-control-label" for="size-2">Phần Lớn</label>
                        </div>
                    </form>
                </div>
                <div class="d-flex mb-4">
                    <strong class="text-dark mr-3">Món thêm:</strong>
                    <form>
                        <div class="custom-control custom-checkbox custom-control-inline">
                            <input type="checkbox" class="custom-control-input" id="topping-1" name="topping">
                            <label class="custom-control-label" for="topping-1">Thêm Trứng</label>
                        </div>
                        <div class="custom-control custom-checkbox custom-control-inline">
                            <input type="checkbox" class="custom-control-input" id="topping-2" name="topping">
                            <label class="custom-control-label" for="topping-2">Thêm Sườn</label>
                        </div>
                    </form>
                </div>

              
                <form asp-controller="GioHang" asp-action="AddToCart" method="post" id="add-to-cart-form">
                    <input type="hidden" name="MaMon" value="@Model.MonAn.MaMon" />

                    <div class="form-group mb-4">
                        <strong class="text-dark mb-2 d-block">Ghi chú:</strong>
                        <textarea class="form-control" rows="2" name="GhiChu" placeholder="Ví dụ: ít cay, không hành..."></textarea>
                    </div>

                    <div class="d-flex align-items-center mb-4 pt-2">
                       
                        <div class="input-group quantity mr-3" id="detail-quantity" style="width: 130px;">
                            <div class="input-group-btn">
                                <button class="btn btn-primary btn-minus" type="button">
                                    <i class="fa fa-minus"></i>
                                </button>
                            </div>
                            <input type="text" class="form-control bg-secondary border-0 text-center" value="1" name="SoLuong" id="quantity-input">
                            <div class="input-group-btn">
                                <button class="btn btn-primary btn-plus" type="button">
                                    <i class="fa fa-plus"></i>
                                </button>
                            </div>
                        </div>

                       
                        <button class="btn btn-primary px-3" type="submit" id="detail-add-btn">
                            <i class="fa fa-shopping-cart mr-1"></i> Thêm vào giỏ hàng
                        </button>
                    </div>
                </form>

               
            </div>
        </div>
    </div>

    <div class="row px-xl-5">
        <div class="col">
            <div class="bg-light p-30">
                <div class="nav nav-tabs mb-4">
                    <a class="nav-item nav-link text-dark active" data-toggle="tab" href="#tab-pane-1">Mô tả</a>
                    <a class="nav-item nav-link text-dark" data-toggle="tab" href="#tab-pane-2">Thông tin</a>
                    <a class="nav-item nav-link text-dark" data-toggle="tab" href="#tab-pane-3">Đánh giá (@Model.SoLuongDanhGia)</a>
                </div>
                <div class="tab-content">
                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="tab-pane-1">
                            <h4 class="mb-3">Mô tả món ăn</h4>
                            <p>@Model.MonAn.MoTa</p>
                        </div>

                        <div class="tab-pane fade" id="tab-pane-2">
                            <h4 class="mb-3">Thông tin thêm</h4>
                            <p>Thông tin về thành phần, calo...</p>
                        </div>

                        <div class="tab-pane fade" id="tab-pane-3">
                            <div class="row">
                                <div class="col-md-6">
                                    <h4 class="mb-4">@Model.SoLuongDanhGia đánh giá cho "@Model.MonAn.TenMon"</h4>

                                    @if (Model.DanhGias.Any())
                                    {
                                        @foreach (var danhgia in Model.DanhGias)
                                        {
                                            <div class="media mb-4">
                                                <img src="~/images/user.jpg" alt="Image" class="img-fluid mr-3 mt-1" style="width: 45px;">
                                                <div class="media-body">
                                                    <h6>
                                                        @(danhgia.MaKhNavigation?.HoTen ?? "Khách")
                                                        <small> - <i>@danhgia.NgayDanhGia?.ToString("dd MMM yyyy")</i></small>
                                                    </h6>
                                                    <div class="text-primary mb-2">
                                                        @for (int i = 0; i < (danhgia.SoSao ?? 0); i++)
                                                        {
                                                            <i class="fas fa-star"></i>
                                                        }
                                                        @for (int i = 0; i < (5 - (danhgia.SoSao ?? 0)); i++)
                                                        {
                                                            <i class="far fa-star"></i>
                                                        }
                                                    </div>
                                                    <p>@danhgia.NoiDung</p>
                                                </div>
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <p>Chưa có đánh giá nào cho món ăn này.</p>
                                    }
                                </div>
                                <div class="col-md-6">
                                    <h4 class="mb-4">Để lại đánh giá</h4>
                                    <small>Email của bạn sẽ không được công bố.</small>
                                    <div class="d-flex my-3">
                                        <p class="mb-0 mr-2">Đánh giá của bạn * :</p>
                                        <div class="text-primary">
                                            <i class="far fa-star"></i>
                                            <i class="far fa-star"></i>
                                            <i class="far fa-star"></i>
                                            <i class="far fa-star"></i>
                                            <i class="far fa-star"></i>
                                        </div>
                                    </div>
                                    <form>
                                        <div class="form-group">
                                            <label for="message">Nội dung *</label>
                                            <textarea id="message" cols="30" rows="5" class="form-control"></textarea>
                                        </div>
                                        <div class="form-group">
                                            <label for="name">Tên của bạn *</label>
                                            <input type="text" class="form-control" id="name">
                                        </div>
                                        <div class="form-group">
                                            <label for="email">Email *</label>
                                            <input type="email" class="form-control" id="email">
                                        </div>
                                        <div class="form-group mb-0">
                                            <input type="submit" value="Gửi đánh giá" class="btn btn-primary px-3">
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid py-5">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">Có Thể Bạn Sẽ Thích</span></h2>
    <div class="row px-xl-5">
        <div class="col">
            <div class="owl-carousel related-carousel">
                @foreach (var item in Model.MonAnLienQuan)
                {
                    <div class="product-item bg-light">
                        <div class="product-img position-relative overflow-hidden">
                            <img class="img-fluid w-100" src="~/@item.HinhAnh" alt="@item.TenMon">
                            <div class="product-action">
                               
                                <a class="btn btn-outline-dark btn-square add-to-cart-btn" href="#" data-id="@item.MaMon"><i class="fa fa-shopping-cart"></i></a>
                                <a class="btn btn-outline-dark btn-square" href="#"><i class="far fa-heart"></i></a>
                               
                                <a class="btn btn-outline-dark btn-square" asp-controller="ChiTietMon" asp-action="Index" asp-route-id="@item.MaMon"><i class="fa fa-search"></i></a>
                            </div>
                        </div>
                        <div class="text-center py-4">
                            <a class="h6 text-decoration-none text-truncate" asp-controller="ChiTietMon" asp-action="Index" asp-route-id="@item.MaMon">@item.TenMon</a>
                            <div class="d-flex align-items-center justify-content-center mt-2">
                                <h5>@item.Gia.ToString("N0")đ</h5>
                            </div>
                          
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function() {
            $('#detail-btn-plus').on('click', function () { 
                var $input = $('#quantity-input');
                var currentVal = parseInt($input.val());
                $input.val(currentVal + 1);
            });

            $('#detail-btn-minus').on('click', function () { 
                var $input = $('#quantity-input');
                var currentVal = parseInt($input.val());
                if (currentVal > 1) {
                    $input.val(currentVal - 1);
                }
            });
            $('#add-to-cart-form').on('submit', function(e) {
                e.preventDefault();

                var $form = $(this);
                var $button = $('#detail-add-btn');
                var formData = $form.serialize();
                var url = $form.attr('action');

                if ($button.find('i').hasClass('fa-spinner') || $button.find('i').hasClass('fa-check')) {
                    return;
                }
                var $cartTarget = $('#header-cart-icon');
                var $imgToAnimate = $('.col-lg-5.mb-30 img');

                if ($imgToAnimate.length > 0) {
                    var $imgClone = $imgToAnimate.clone()
                        .offset({
                            top: $imgToAnimate.offset().top,
                            left: $imgToAnimate.offset().left
                        })
                        .css({
                            'opacity': '0.8',
                            'position': 'absolute',
                            'height': '100px',
                            'width': 'auto',
                            'z-index': '10000'
                        });
                    $('body').append($imgClone);

                    $imgClone.animate({
                        'top': $cartTarget.offset().top + 10,
                        'left': $cartTarget.offset().left + 10,
                        'height': '50px',
                        'width': 'auto',
                        'opacity': 0.3
                    }, 1000, 'easeInOutExpo', function () {
                        $(this).remove();
                    });
                }
                $button.html('<i class="fa fa-spinner fa-spin"></i> Đang thêm...');

                $.ajax({
                    url: url,
                    type: 'POST',
                    data: formData,
                    success: function (response) {
                        if (response.success) {
                            $('#cart-count').text(response.cartCount);
                            $button.html('<i class="fa fa-check"></i> Đã thêm!');

                            setTimeout(function() {
                                 $button.html('<i class="fa fa-shopping-cart mr-1"></i> Thêm vào giỏ hàng');
                            }, 2000);

                        } else {
                            alert(response.message || "Lỗi: Không thể thêm vào giỏ.");
                            $button.html('<i class="fa fa-shopping-cart mr-1"></i> Thêm vào giỏ hàng');
                        }
                    },
                    error: function () {
                        alert("Lỗi kết nối. Vui lòng thử lại.");
                        $button.html('<i class="fa fa-shopping-cart mr-1"></i> Thêm vào giỏ hàng');
                    }
                });
            });

        });
    </script>
}
