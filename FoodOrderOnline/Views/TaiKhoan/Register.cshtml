@model FoodOrderOnline.ViewModels.DangKyVM
@{
    ViewData["Title"] = "Đăng ký tài khoản";
}

<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" asp-controller="TrangChu" asp-action="Index">Trang chủ</a>
                <span class="breadcrumb-item active">Đăng ký</span>
            </nav>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-lg-6 offset-lg-3">
            <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Tạo tài khoản mới</span></h5>

            <form asp-action="Register" method="post">
                <div class="bg-light p-30 mb-5">

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label asp-for="HoTen"></label>
                            <input class="form-control" asp-for="HoTen" placeholder="Nguyễn Văn A">
                            <span asp-validation-for="HoTen" class="text-danger"></span>
                        </div>

                        <div class="col-md-12 form-group">
                            <label asp-for="TenDangNhap"></label>
                            <input class="form-control" asp-for="TenDangNhap" placeholder="vidu: nguyenvan_a">
                            <span asp-validation-for="TenDangNhap" class="text-danger"></span>
                        </div>

                        <div class="col-md-12 form-group">
                            <label asp-for="Email"></label>
                            <input class="form-control" type="email" asp-for="Email" placeholder="example@email.com">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="col-md-12 form-group">
                            <label asp-for="SoDienThoai"></label>
                            <input class="form-control" type="tel" asp-for="SoDienThoai" placeholder="0901234567">
                            <span asp-validation-for="SoDienThoai" class="text-danger"></span>
                        </div>

                        <div class="col-md-12 form-group">
                            <label asp-for="DiaChi"></label>
                            <input class="form-control" asp-for="DiaChi" placeholder="123 Nguyễn Huệ, Q.1, TP.HCM">
                            <span asp-validation-for="DiaChi" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 form-group">
                            <label asp-for="MatKhau"></label>
                            <input class="form-control" asp-for="MatKhau" placeholder="******">
                            <span asp-validation-for="MatKhau" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 form-group">
                            <label asp-for="XacNhanMatKhau"></label>
                            <input class="form-control" asp-for="XacNhanMatKhau" placeholder="******">
                            <span asp-validation-for="XacNhanMatKhau" class="text-danger"></span>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary btn-block font-weight-bold py-3">
                        Đăng Ký
                    </button>

                    <div class="text-center mt-3">
                        <a asp-action="Login">Đã có tài khoản? Đăng nhập ngay</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        // Thêm script validation (để kiểm tra lỗi ngay khi người dùng nhập)
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}