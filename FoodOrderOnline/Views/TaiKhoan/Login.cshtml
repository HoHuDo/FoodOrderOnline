@model FoodOrderOnline.ViewModels.LoginVM
@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" asp-controller="TrangChu" asp-action="Index">Trang chủ</a>
                <span class="breadcrumb-item active">Đăng nhập</span>
            </nav>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-lg-6 offset-lg-3">
            <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Đăng nhập</span></h5>

            <form asp-action="Login" method="post">
                <div class="bg-light p-30 mb-5">

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label asp-for="TenDangNhap"></label>
                            <input class="form-control" asp-for="TenDangNhap" placeholder="Nhập tên đăng nhập...">
                            <span asp-validation-for="TenDangNhap" class="text-danger"></span>
                        </div>

                        <div class="col-md-12 form-group">
                            <label asp-for="MatKhau"></label>
                            <input class="form-control" asp-for="MatKhau" placeholder="******">
                            <span asp-validation-for="MatKhau" class="text-danger"></span>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary btn-block font-weight-bold py-3">
                        Đăng Nhập
                    </button>

                    <div class="text-center mt-3">
                        <a asp-action="Register">Chưa có tài khoản? Đăng ký ngay</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}