
@model FoodOrderOnline.ViewModels.ThanhToanVM
@{
    ViewData["Title"] = "Thanh toán";
}

<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" asp-controller="TrangChu" asp-action="Index">Trang chủ</a>
                <a class="breadcrumb-item text-dark" asp-controller="GioHang" asp-action="Index">Giỏ hàng</a>
                <span class="breadcrumb-item active">Thanh toán</span>
            </nav>
        </div>
    </div>
</div>
<div class="container-fluid">
    <form asp-action="Index" method="post">

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="row px-xl-5">
            <div class="col-lg-8">
                <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Thông tin giao hàng</span></h5>
                <div class="bg-light p-30 mb-5">
                    <div class="row">

                        <div class="col-md-6 form-group">
                            <label>Họ và Tên</label>
                            <input class="form-control" type="text" asp-for="HoTen" placeholder="Nguyễn Văn A">
                            <span asp-validation-for="HoTen" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 form-group">
                            <label>E-mail</label>
                            <input class="form-control" type="email" asp-for="Email" placeholder="example@email.com">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Số điện thoại</label>
                            <input class="form-control" type="tel" asp-for="SoDienThoai" placeholder="+123 456 789">
                            <span asp-validation-for="SoDienThoai" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Địa chỉ</label>
                            <input class="form-control" type="text" asp-for="DiaChi" placeholder="123 Nguyễn Huệ, Q.1, TP.HCM">
                            <span asp-validation-for="DiaChi" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <label>Ghi chú (tùy chọn)</label>
                            <textarea class="form-control" rows="3" asp-for="GhiChu" placeholder="Ví dụ: Giao hàng giờ hành chính..."></textarea>
                        </div>

                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Tóm tắt đơn hàng</span></h5>
                <div class="bg-light p-30 mb-5">
                    <div class="border-bottom">
                        <h6 class="mb-3">Sản phẩm</h6>

                        @foreach (var item in Model.Summary.CartItems)
                        {
                            <div class="d-flex justify-content-between">
                                <p>@item.TenMon (x @item.SoLuong)</p>
                                <p>@item.ThanhTien.ToString("N0")đ</p>
                            </div>
                        }
                    </div>
                    <div class="border-bottom pt-3 pb-2">
                        <div class="d-flex justify-content-between mb-3">
                            <h6>Tạm tính</h6>
                            <h6>@Model.Summary.Subtotal.ToString("N0")đ</h6>
                        </div>
                        <div class="d-flex justify-content-between">
                            <h6 class="font-weight-medium">Phí vận chuyển</h6>
                            <h6 class="font-weight-medium">@Model.Summary.Shipping.ToString("N0")đ</h6>
                        </div>
                        @if (Model.Summary.CouponDiscount > 0)
                        {
                            <div class="d-flex justify-content-between text-danger">
                                <h6 class="font-weight-medium">Giảm giá (@Model.Summary.CouponCode)</h6>
                                <h6 class="font-weight-medium">-@Model.Summary.CouponDiscount.ToString("N0")đ</h6>
                            </div>
                        }
                    </div>
                    <div class="pt-2">
                        <div class="d-flex justify-content-between mt-2">
                            <h5>Tổng tiền</h5>
                            <h5>@Model.Summary.Total.ToString("N0")đ</h5>
                        </div>
                    </div>
                </div>
                <div class="mb-5">
                    <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Thanh toán</span></h5>
                    <div class="bg-light p-30">
                        <div class="form-group">
                            <div class="custom-control custom-radio">
                                <input type="radio" class="custom-control-input" name="payment" id="cod" checked>
                                <label class="custom-control-label" for="cod">Thanh toán khi nhận hàng (COD)</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="custom-control custom-radio">
                                <input type="radio" class="custom-control-input" name="payment" id="vnpay" disabled>
                                <label class="custom-control-label" for="vnpay">(Sắp có) VNPay/Chuyển khoản</label>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-block btn-primary font-weight-bold py-3">
                            ĐẶT HÀNG
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}