@model IEnumerable<FoodOrderOnline.Models.MonAn>

@foreach (var item in Model)
{
    <div class="col-lg-4 col-md-6 col-sm-6 pb-1">
        <div class="product-item bg-light mb-4">
            <div class="product-img position-relative overflow-hidden">

                <img class="img-fluid w-100" src="~/@item.HinhAnh" alt="@item.TenMon">

                <div class="product-action">
                    @* SỬA LỖI 1: Thêm class 'add-to-cart-btn' và 'data-id' *@
                    <a class="btn btn-outline-dark btn-square add-to-cart-btn" href="#" data-id="@item.MaMon">
                        <i class="fa fa-shopping-cart"></i>
                    </a>

                    <a class="btn btn-outline-dark btn-square" href="#"><i class="far fa-heart"></i></a>

                    @* SỬA LỖI 2: Link chi tiết trỏ đến MonAn/ChiTiet *@
                    <a class="btn btn-outline-dark btn-square"
                       asp-controller="ChiTietMon"
                       asp-action="Index"
                       asp-route-id="@item.MaMon">
                        <i class="fa fa-search"></i>
                    </a>

                </div>
            </div>
            <div class="text-center py-4">

                @* SỬA LỖI 2: Link chi tiết trỏ đến MonAn/ChiTiet *@
                <a class="h6 text-decoration-none text-truncate"
                   asp-controller="MonAn"
                   asp-action="ChiTiet"
                   asp-route-id="@item.MaMon">
                    @item.TenMon
                </a>

                <div class="d-flex align-items-center justify-content-center mt-2">
                    <h5>@item.Gia.ToString("N0")đ</h5>
                </div>
                <div class="d-flex align-items-center justify-content-center mb-1">
                    <small class="fa fa-star text-primary mr-1"></small>
                    <small class="fa fa-star text-primary mr-1"></small>
                    <small class="fa fa-star text-primary mr-1"></small>
                    <small class="fa fa-star text-primary mr-1"></small>
                    <small class="fa fa-star text-primary mr-1"></small>
                </div>
            </div>
        </div>
    </div>
}