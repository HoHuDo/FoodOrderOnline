@model FoodOrderOnline.Models.MonAn
@{
    ViewData["Title"] = "Tạo Món ăn mới";
    Layout = "_LayoutNhanVien";
}

<h1>Tạo Món ăn mới</h1>
<hr />
<div class="row">
    <div class="col-md-8">
        @* SỬA 1: Thêm 'enctype' để form có thể tải file lên *@
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="TenMon" class="control-label"></label>
                <input asp-for="TenMon" class="form-control" />
                <span asp-validation-for="TenMon" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="MoTa" class="control-label"></label>
                <textarea asp-for="MoTa" class="form-control" rows="3"></textarea>
                <span asp-validation-for="MoTa" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Gia" class="control-label"></label>
                <input asp-for="Gia" class="form-control" type="number" />
                <span asp-validation-for="Gia" class="text-danger"></span>
            </div>

            @* SỬA 2: Đổi 'input' của HinhAnh thành 'type="file"' *@
            <div class="form-group mb-3">
                <label class="control-label">Hình Ảnh</label>
                <input type="file" name="HinhAnhFile" class="form-control" required />
            </div>

            <div class="form-group mb-3">
                <label asp-for="MaDm" class="control-label">Danh mục</label>
                <select asp-for="MaDm" class="form-control" asp-items="ViewBag.MaDm">
                    <option value="">-- Chọn danh mục --</option>
                </select>
                <span asp-validation-for="MaDm" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="TrangThai" class="control-label"></label>
                <input asp-for="TrangThai" class="form-control" value="1" />
                <span asp-validation-for="TrangThai" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Tạo mới" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
            </div>
        </form>
    </div>
</div>