@{
    ViewData["Title"] = "Trang chủ";
}
@model FoodOrderOnline.ViewModels.TrangChuVM
 <!-- Carousel Start -->
    <div class="container-fluid mb-3">
        <div class="row px-xl-5">
            <div class="col-lg-8">
                <div id="header-carousel" class="carousel slide carousel-fade mb-30 mb-lg-0" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#header-carousel" data-slide-to="0" class="active"></li>
                        <li data-target="#header-carousel" data-slide-to="1"></li>
                        <li data-target="#header-carousel" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item position-relative active" style="height: 430px;">
                        <img class="position-absolute w-100 h-100" src="~/images/carousel-1.png" style="object-fit: cover;">
                            <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                                <div class="p-3" style="max-width: 700px;">
                                <h1 class="display-4 text-white mb-3 animate__animated animate__fadeInDown">Ăn Gì Hôm Nay</h1>
                                <p class="mx-md-5 px-5 animate__animated animate__bounceIn">Khám phá hàng trăm món ăn ngon quanh bạn, luôn sẵn sàng phục vụ.</p>
                                    <a class="btn btn-outline-light py-2 px-4 mt-3 animate__animated animate__fadeInUp" asp-controller="MonAn" asp-action="Index">Mua Ngay</a>
                                </div>
                            </div>
                        </div>
                        <div class="carousel-item position-relative" style="height: 430px;">
                            <img class="position-absolute w-100 h-100" src="images/carousel-2.jpeg" style="object-fit: cover;">
                            <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                                <div class="p-3" style="max-width: 700px;">
                                <h1 class="display-4 text-white mb-3 animate__animated animate__fadeInDown">Hương Vị Việt</h1>
                                <p class="mx-md-5 px-5 animate__animated animate__bounceIn">Ẩm thực truyền thống hòa cùng phong cách hiện đại.</p>
                                <a class="btn btn-outline-light py-2 px-4 mt-3 animate__animated animate__fadeInUp" asp-controller="MonAn" asp-action="Index">Mua Ngay</a>
                                </div>
                            </div>
                        </div>
                        <div class="carousel-item position-relative" style="height: 430px;">
                            <img class="position-absolute w-100 h-100" src="images/carousel-3.jpg" style="object-fit: cover;">
                            <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                                <div class="p-3" style="max-width: 700px;">
                                <h1 class="display-4 text-white mb-3 animate__animated animate__fadeInDown">Deal Ngon Hôm Nay</h1>
                                <p class="mx-md-5 px-5 animate__animated animate__bounceIn">Món ngon giá rẻ, khuyến mãi thay đổi mỗi ngày.</p>
                                <a class="btn btn-outline-light py-2 px-4 mt-3 animate__animated animate__fadeInUp" asp-controller="MonAn" asp-action="Index">Mua Ngay</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="product-offer mb-30" style="height: 200px;">
                    <img class="img-fluid" src="images/offer-1.webp" alt="">
                    <div class="offer-text">
                        <h6 class="text-white text-uppercase">Save 15%</h6>
                        <h3 class="text-white mb-3">ƯU ĐÃI HÔM NAY</h3>
                    <a asp-controller="MonAn" asp-action="Index" class="btn btn-primary">Mua Ngay</a>
                    </div>
                </div>
                <div class="product-offer mb-30" style="height: 200px;">
                    <img class="img-fluid" src="images/offer-2.jpg" alt="">
                    <div class="offer-text">
                        <h6 class="text-white text-uppercase">Save 20%</h6>
                        <h3 class="text-white mb-3">GIẢM GIÁ CỰC SỐC</h3>
                    <a asp-controller="MonAn" asp-action="Index" class="btn btn-primary">Mua Ngay</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Carousel End -->


    <!-- Featured Start -->
    <div class="container-fluid pt-5">
        <div class="row px-xl-5 pb-3">
            <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
                <div class="d-flex align-items-center bg-light mb-4" style="padding: 30px;">
                    <h1 class="fa fa-check text-primary m-0 mr-3"></h1>
                <h5 class="font-weight-semi-bold m-0">Món ăn chất lượng</h5>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
                <div class="d-flex align-items-center bg-light mb-4" style="padding: 30px;">
                    <h1 class="fa fa-shipping-fast text-primary m-0 mr-2"></h1>
                <h5 class="font-weight-semi-bold m-0">Giao hàng miễn phí</h5>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
                <div class="d-flex align-items-center bg-light mb-4" style="padding: 30px;">
                <h1 class="fas fas fa-utensils text-primary m-0 mr-3"></h1>
                <h5 class="font-weight-semi-bold m-0">Luôn tươi ngon</h5>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
                <div class="d-flex align-items-center bg-light mb-4" style="padding: 30px;">
                    <h1 class="fa fa-phone-volume text-primary m-0 mr-3"></h1>
                <h5 class="font-weight-semi-bold m-0">Hỗ trợ 24/7</h5>
                </div>
            </div>
        </div>
    </div>
    <!-- Featured End -->


<div class="container-fluid pt-5">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">Danh Mục Món Ăn</span></h2>
    <div class="row px-xl-5 pb-3 ">
        @foreach (var danhMuc in Model.DanhMucs)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
                <a class="text-decoration-none" asp-controller="MonAn" asp-action="Index" asp-route-danhMucId="@danhMuc.MaDm">
                    <div class="cat-item d-flex align-items-center mb-4 ">
                        <div class="overflow-hidden" style="width: 100px; height: 100px;">
                            <img class="img-fluid" src="@danhMuc.HinhAnh" alt="@danhMuc.TenDm">
                        </div>
                        <div class="flex-fill pl-3">
                            <h6>@danhMuc.TenDm</h6>
                            <small class="text-body">@danhMuc.SoLuongMonAn Món</small>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>
<div class="container-fluid pt-5 pb-3">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">Món Ăn Nổi Bật</span></h2>
    <div class="row px-xl-5">
        @foreach (var monAn in Model.MonAnNoiBat)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
                <div class="product-item bg-light mb-4">
                    <div class="product-img position-relative overflow-hidden">
                        <img class="img-fluid w-100" src="@monAn.HinhAnh" alt="@monAn.TenMon">
                        <div class="product-action">
                            <a class="btn btn-outline-dark btn-square add-to-cart-btn" href="#" data-id="@monAn.MaMon"><i class="fa fa-shopping-cart"></i></a>
                            <a class="btn btn-outline-dark btn-square" href="#"><i class="far fa-heart"></i></a>
                            <a class="btn btn-outline-dark btn-square" href="#"><i class="fa fa-sync-alt"></i></a>
                            <a class="btn btn-outline-dark btn-square" asp-controller="ChiTietMon" asp-action="Index" asp-route-id="@monAn.MaMon">
                                <i class="fa fa-search"></i>
                            </a>
                        </div>
                    </div>
                    <div class="text-center py-4">
                        <a class="h6 text-decoration-none text-truncate" asp-controller="ChiTietMon" asp-action="Index" asp-route-id="@monAn.MaMon">
                            @monAn.TenMon
                        </a>
                        <div class="d-flex align-items-center justify-content-center mt-2">
                            <h5>@monAn.Gia.ToString("N0")đ</h5>
                        </div>
                        <div class="d-flex align-items-center justify-content-center mb-1">
                            <small class="fa fa-star text-primary mr-1"></small>
                            <small class="fa fa-star text-primary mr-1"></small>
                            <small class="fa fa-star text-primary mr-1"></small>
                            <small class="fa fa-star text-primary mr-1"></small>
                            <small class="fa fa-star text-primary mr-1"></small>
                            <small>(99)</small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
